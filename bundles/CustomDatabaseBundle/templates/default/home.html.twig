
{% extends '@CustomDatabase/sidebar/sidebar.html.twig' %}
{% block content %}
    <div class="main-content">
        <!-- Content Area -->
        <div class="content">
            <div class="page-header">
                <h1 class="page-title">Database Management Dashboard</h1>
                <div class="breadcrumb">
                    <a href="#">Home</a> <i class="fas fa-chevron-right"></i> 
                    <span>Dashboard</span>
                </div>
            </div>

            <!-- Stats Overview -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon db">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="stat-info">
                        <h3>12</h3>
                        <p>Active Databases</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon api">
                        <i class="fas fa-plug"></i>
                    </div>
                    <div class="stat-info">
                        <h3>7</h3>
                        <p>API Connections</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon job">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-info">
                        <h3>24</h3>
                        <p>Scheduled Jobs</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon data">
                        <i class="fas fa-file-import"></i>
                    </div>
                    <div class="stat-info">
                        <h3>1.2GB</h3>
                        <p>Data Processed</p>
                    </div>
                </div>
            </div>

            <div class="dashboard-cards">
                <!-- Database Connection Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-database"></i> Database Connection</h3>
                        <div class="card-actions">
                            <div class="card-action"><i class="fas fa-cog"></i></div>
                            <div class="card-action"><i class="fas fa-ellipsis-v"></i></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Connect to various database types with ease.</p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check-circle"></i> MySQL, PostgreSQL, MongoDB</li>
                            <li><i class="fas fa-check-circle"></i> SQL Server, Oracle, SQLite</li>
                            <li><i class="fas fa-check-circle"></i> Connection testing & validation</li>
                            <li><i class="fas fa-check-circle"></i> Secure credential storage</li>
                            <li><i class="fas fa-check-circle"></i> Connection pooling</li>
                            <li><i class="fas fa-check-circle"></i> SSH tunneling support</li>
                        </ul>
                        <a href="{{ path('database_conn') }}" class="btn btn-block">Connect Database</a>
                    </div>
                </div>

                <!-- Database Mapping Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-project-diagram"></i> Database Mapping</h3>
                        <div class="card-actions">
                            <div class="card-action"><i class="fas fa-cog"></i></div>
                            <div class="card-action"><i class="fas fa-ellipsis-v"></i></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Map and transfer data between databases.</p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check-circle"></i> Column name matching</li>
                            <li><i class="fas fa-check-circle"></i> Data type mapping</li>
                            <li><i class="fas fa-check-circle"></i> Transformation rules</li>
                            <li><i class="fas fa-check-circle"></i> Real-time preview</li>
                            <li><i class="fas fa-check-circle"></i> Schema comparison</li>
                            <li><i class="fas fa-check-circle"></i> Data validation rules</li>
                        </ul>
                        <a href="#" class="btn btn-block">Start Mapping</a>
                    </div>
                </div>

                <!-- Job Automation Card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-tasks"></i> Job Automation</h3>
                        <div class="card-actions">
                            <div class="card-action"><i class="fas fa-cog"></i></div>
                            <div class="card-action"><i class="fas fa-ellipsis-v"></i></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Schedule and automate data transfer jobs.</p>
                        <ul class="feature-list">
                            <li><i class="fas fa-check-circle"></i> Schedule one-time or recurring jobs</li>
                            <li><i class="fas fa-check-circle"></i> Monitor job status</li>
                            <li><i class="fas fa-check-circle"></i> Error handling & notifications</li>
                            <li><i class="fas fa-check-circle"></i> Job history & logs</li>
                            <li><i class="fas fa-check-circle"></i> Dependency management</li>
                            <li><i class="fas fa-check-circle"></i> Performance monitoring</li>
                        </ul>
                        <a href="#" class="btn btn-block">Configure Jobs</a>
                    </div>
                </div>
            </div>

            <!-- Two Column Layout -->
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 25px; margin-bottom: 30px;">
                <!-- API Connection Section -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-plug"></i> API Connections</h3>
                        <div class="card-actions">
                            <div class="card-action"><i class="fas fa-cog"></i></div>
                            <div class="card-action"><i class="fas fa-ellipsis-v"></i></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>Connect to various API services and manage endpoints.</p>
                        <div class="api-connections">
                            <div class="api-card">
                                <div class="api-icon">
                                    <i class="fab fa-slack"></i>
                                </div>
                                <h4 class="api-name">Slack API</h4>
                                <p class="api-desc">Connect to Slack workspace for notifications</p>
                                <button class="btn btn-outline">Connect</button>
                            </div>
                            <div class="api-card">
                                <div class="api-icon">
                                    <i class="fab fa-google"></i>
                                </div>
                                <h4 class="api-name">Google API</h4>
                                <p class="api-desc">Connect to Google services</p>
                                <button class="btn btn-outline">Connect</button>
                            </div>
                            <div class="api-card">
                                <div class="api-icon">
                                    <i class="fab fa-microsoft"></i>
                                </div>
                                <h4 class="api-name">Microsoft Graph</h4>
                                <p class="api-desc">Connect to Microsoft 365 services</p>
                                <button class="btn btn-outline">Connect</button>
                            </div>
                            <div class="api-card">
                                <div class="api-icon">
                                    <i class="fas fa-cloud"></i>
                                </div>
                                <h4 class="api-name">Webhook</h4>
                                <p class="api-desc">Create custom webhook endpoints</p>
                                <button class="btn btn-outline">Configure</button>
                            </div>
                        </div>
                    </div>
                </div>

            <!-- Data Importer Section -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-import"></i> Universal Data Importer</h3>
                    <div class="card-actions">
                        <div class="card-action"><i class="fas fa-cog"></i></div>
                        <div class="card-action"><i class="fas fa-ellipsis-v"></i></div>
                    </div>
                </div>
                <div class="card-body">
                    <p>Import data from various formats into your databases.</p>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
                        <div>
                            <h4>Supported Formats</h4>
                            <ul class="feature-list">
                                <li><i class="fas fa-file-csv"></i> CSV & TSV</li>
                                <li><i class="fas fa-file-excel"></i> Excel (XLSX, XLS)</li>
                                <li><i class="fas fa-file-code"></i> XML & JSON</li>
                                <li><i class="fas fa-file-alt"></i> Plain Text</li>
                            </ul>
                        </div>
                        <div>
                            <h4>Import Options</h4>
                            <ul class="feature-list">
                                <li><i class="fas fa-bolt"></i> Quick import templates</li>
                                <li><i class="fas fa-cogs"></i> Custom mapping</li>
                                <li><i class="fas fa-sync"></i> Incremental updates</li>
                                <li><i class="fas fa-check-double"></i> Data validation</li>
                            </ul>
                        </div>
                    </div>
                    <a href="#" class="btn btn-block" style="margin-top: 20px;">Import Data</a>
                </div>
            </div>
        </div>

        <!-- Advanced Features Grid -->
        <div class="advanced-features-grid">
            <div class="advanced-card">
                <div class="advanced-icon"><i class="fas fa-user-secret"></i></div>
                <div class="advanced-title">Data Masking</div>
                <div class="advanced-desc">Protect sensitive data with dynamic masking and role-based access.</div>
                <a href="#" class="btn btn-outline">Configure</a>
            </div>
            <div class="advanced-card">
                <div class="advanced-icon"><i class="fas fa-clipboard-list"></i></div>
                <div class="advanced-title">Audit Logs</div>
                <div class="advanced-desc">Track all database activities for compliance and security.</div>
                <a href="#" class="btn btn-outline">View Logs</a>
            </div>
            <div class="advanced-card">
                <div class="advanced-icon"><i class="fas fa-database"></i></div>
                <div class="advanced-title">Backup & Restore</div>
                <div class="advanced-desc">Automate backups and restore databases with one click.</div>
                <a href="#" class="btn btn-outline">Backup Now</a>
            </div>
            <div class="advanced-card">
                <div class="advanced-icon"><i class="fas fa-chart-pie"></i></div>
                <div class="advanced-title">Advanced Analytics</div>
                <div class="advanced-desc">Visualize trends and generate custom reports from your data.</div>
                <a href="#" class="btn btn-outline">Analyze</a>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <div class="footer-content advanced-footer">
                <div class="footer-brand">
                    <div class="logo-img">AD</div>
                    <div>
                        <strong>AIDesk</strong><br>
                        <span>Advanced Database Management Platform</span>
                    </div>
                </div>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                    <a href="#">Help Center</a>
                    <a href="#">Contact Us</a>
                    <a href="#">Release Notes</a>
                    <a href="#">System Status</a>
                </div>
                <div class="footer-social">
                    <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" title="LinkedIn"><i class="fab fa-linkedin"></i></a>
                    <a href="#" title="GitHub"><i class="fab fa-github"></i></a>
                </div>
            </div>
            <div class="footer-copyright">
                &copy; {{ "now"|date("Y") }} AIDesk. All rights reserved. | Powered by <a href="https://aidesk.com" target="_blank">AIDesk</a>
            </div>
        </div>
    </div>
    <script src="{{ asset('bundles/customdatabase/static/home/script.js') }}"></script>

{% endblock %}
       