    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhG81rKrKrBr/J6f3Lv8eDlhEpX/1z6K3PONi9W8m4Llb5EM26VJoK27HM" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/database/style.css') }}" crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/impoter/style.css') }}" crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head> 
<body>
    <div id="ruleEngineTitle">Data Importer</div>
    
    <div class="container-fluid">
        <div class="main-layout">
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar-container d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Data Import Options</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" id="importDataLink">
                                <i class="fas fa-file-import"></i>
                                Import Data
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="exportDataLink">
                                <i class="fas fa-file-export"></i>
                                Export Data
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="dataMappingLink">
                                <i class="fas fa-exchange-alt"></i>
                                Data Mapping
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="importHistoryLink">
                                <i class="fas fa-history"></i>
                                Import History
                            </a>
                        </li>
                    </ul>
                    
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>File Formats</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-file-csv"></i>
                                CSV Files
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-file-code"></i>
                                XML Files
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-file-code"></i>
                                JSON Files
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-file-excel"></i>
                                Excel Files
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            <!-- Main Content -->
            <main class="main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Data Importer</h1>
                </div>
                
                <!-- Import Data Section -->
                <div id="importDataSection">
                    <h3>Import Data</h3>
                    <p>Upload and convert data files to table format</p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <form id="uploadForm" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="dataFile" class="form-label">Select File</label>
                                    <input class="form-control" type="file" id="dataFile" name="file" accept=".csv,.xml,.json,.xlsx,.xls">
                                    <div class="form-text">Supported formats: CSV, XML, JSON, Excel</div>
                                </div>
                                <button type="submit" class="btn btn-primary" id="uploadBtn">
                                    <i class="fas fa-file-upload"></i> Select File
                                </button>
                            </form>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Advanced Import Options</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="delimiter" class="form-label">CSV Delimiter</label>
                                        <select class="form-control" id="delimiter">
                                            <option value=",">Comma (,)</option>
                                            <option value=";">Semicolon (;)</option>
                                            <option value="\t">Tab</option>
                                            <option value="|">Pipe (|)</option>
                                        </select>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="firstRowHeader" checked>
                                        <label class="form-check-label" for="firstRowHeader">
                                            First row as header
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="skipEmptyRows" checked>
                                        <label class="form-check-label" for="skipEmptyRows">
                                            Skip empty rows
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div id="uploadResult" class="mt-3" style="display: none;">
                        <div class="alert" id="uploadMessage"></div>
                    </div>
                </div>
                
                <!-- Data Display Section -->
                <div id="dataDisplaySection" class="mt-4" style="display: none;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3>Data Preview</h3>
                        <div>
                            <button id="showTableBtn" class="btn btn-success me-2">
                                <i class="fas fa-table"></i> Show Data in Table
                            </button>
                            <button id="convertTableBtn" class="btn btn-primary">
                                <i class="fas fa-exchange-alt"></i> Convert to Table Format
                            </button>
                        </div>
                    </div>
                    <div id="dataPreview"></div>
                </div>
            </main>
        </div>
    </div>
    
    <script src="{{ asset('bundles/customdatabase/static/impoter/script.js') }}"></script>
</body>
</html>