{% extends '@CustomDatabase/sidebar/sidebar.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/database/style.css') }}" crossorigin="anonymous" />
{% endblock %}

{% block headscripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('bundles/customdatabase/static/data-importer/script.js') }}"></script>
{% endblock %}

{% block content %}
<div class="main-content">
    <div class="data-importer-content">
        <div class="database-header">
            <div class="header-actions">
                <a href="{{ path('home') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
                <button class="btn-import-data" onclick="openImportModal()">
                    <i class="fas fa-upload"></i> Import Data
                </button>
            </div>
            <h1><i class="fas fa-file-import"></i> Advanced Data Importer</h1>
            <p>Import data from various sources with intelligent validation, transformation, and error handling</p>
        </div>

        <!-- Import Overview Section -->
        <div class="import-overview-section">
            <h2><i class="fas fa-chart-network"></i> Import Overview</h2>
            <div class="import-stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Total Imports</h4>
                        <div class="stat-value" id="total-imports">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Successful</h4>
                        <div class="stat-value" id="successful-imports">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Failed</h4>
                        <div class="stat-value" id="failed-imports">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Records Imported</h4>
                        <div class="stat-value" id="records-imported">0</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Import History Section -->
        <div class="import-history-section">
            <div class="section-header">
                <h2><i class="fas fa-history"></i> Import History</h2>
                <div class="section-controls">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="import-search" placeholder="Search imports...">
                    </div>
                    <select id="import-status-filter">
                        <option value="all">All Status</option>
                        <option value="completed">Completed</option>
                        <option value="failed">Failed</option>
                        <option value="processing">Processing</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
            </div>

            <div class="import-history-list" id="import-history-list">
                <!-- Import history items will be loaded dynamically -->
            </div>
        </div>

        <!-- Data Preview Section -->
        <div class="data-preview-section">
            <h2><i class="fas fa-eye"></i> Data Preview & Validation</h2>
            <div class="preview-interface">
                <div class="file-upload-panel">
                    <h3>Upload Data File</h3>
                    <div class="upload-area" id="upload-area">
                        <div class="upload-content">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <h4>Drag & Drop Files Here</h4>
                            <p>or <span class="upload-link" onclick="triggerFileInput()">browse files</span></p>
                            <input type="file" id="file-input" multiple accept=".csv,.xlsx,.xls,.json,.xml" style="display: none;">
                        </div>
                    </div>
                    <div class="supported-formats">
                        <small>Supported formats: CSV, Excel (.xlsx, .xls), JSON, XML</small>
                    </div>
                </div>

                <div class="preview-panel">
                    <h3>Data Preview</h3>
                    <div class="preview-controls">
                        <div class="control-group">
                            <label for="preview-rows">Rows to preview:</label>
                            <select id="preview-rows">
                                <option value="10">10 rows</option>
                                <option value="50">50 rows</option>
                                <option value="100" selected>100 rows</option>
                                <option value="500">500 rows</option>
                            </select>
                        </div>
                        <div class="control-group">
                            <button class="btn-refresh-preview" onclick="refreshPreview()">
                                <i class="fas fa-sync"></i> Refresh
                            </button>
                        </div>
                    </div>
                    <div class="data-table-container">
                        <table class="data-preview-table" id="data-preview-table">
                            <thead id="preview-table-head">
                                <!-- Table headers will be generated dynamically -->
                            </thead>
                            <tbody id="preview-table-body">
                                <!-- Table data will be generated dynamically -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Field Mapping Section -->
        <div class="field-mapping-section">
            <h2><i class="fas fa-link"></i> Field Mapping & Transformation</h2>
            <div class="mapping-interface">
                <div class="source-fields-panel">
                    <h3>Source Fields</h3>
                    <div class="fields-list" id="source-fields-list">
                        <!-- Source fields will be loaded dynamically -->
                    </div>
                </div>

                <div class="mapping-canvas">
                    <h3>Field Mappings</h3>
                    <div class="mapping-rules" id="mapping-rules">
                        <!-- Mapping rules will be displayed here -->
                    </div>
                    <div class="mapping-actions">
                        <button class="btn-auto-map" onclick="autoMapFields()">
                            <i class="fas fa-magic"></i> Auto Map
                        </button>
                        <button class="btn-clear-mapping" onclick="clearAllMappings()">
                            <i class="fas fa-trash"></i> Clear All
                        </button>
                    </div>
                </div>

                <div class="target-fields-panel">
                    <h3>Target Fields</h3>
                    <div class="fields-list" id="target-fields-list">
                        <!-- Target fields will be loaded dynamically -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Import Configuration Section -->
        <div class="import-config-section">
            <h2><i class="fas fa-cogs"></i> Import Configuration</h2>
            <div class="config-panels">
                <div class="config-panel">
                    <h3>Import Settings</h3>
                    <div class="config-options">
                        <div class="config-option">
                            <label for="import-mode">Import Mode:</label>
                            <select id="import-mode">
                                <option value="insert">Insert Only</option>
                                <option value="update">Update Only</option>
                                <option value="upsert" selected>Insert/Update (Upsert)</option>
                            </select>
                        </div>
                        <div class="config-option">
                            <label for="batch-size">Batch Size:</label>
                            <select id="batch-size">
                                <option value="100">100 records</option>
                                <option value="500" selected>500 records</option>
                                <option value="1000">1000 records</option>
                                <option value="5000">5000 records</option>
                            </select>
                        </div>
                        <div class="config-option">
                            <label for="error-handling">Error Handling:</label>
                            <select id="error-handling">
                                <option value="stop">Stop on first error</option>
                                <option value="continue" selected>Continue on errors</option>
                                <option value="rollback">Rollback on errors</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="config-panel">
                    <h3>Data Validation</h3>
                    <div class="validation-options">
                        <div class="validation-option">
                            <label>
                                <input type="checkbox" id="validate-required" checked>
                                Validate required fields
                            </label>
                        </div>
                        <div class="validation-option">
                            <label>
                                <input type="checkbox" id="validate-data-types" checked>
                                Validate data types
                            </label>
                        </div>
                        <div class="validation-option">
                            <label>
                                <input type="checkbox" id="validate-references">
                                Validate foreign key references
                            </label>
                        </div>
                        <div class="validation-option">
                            <label>
                                <input type="checkbox" id="skip-duplicates">
                                Skip duplicate records
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Import Progress Section -->
        <div class="import-progress-section">
            <h2><i class="fas fa-tasks"></i> Import Progress</h2>
            <div class="progress-dashboard">
                <div class="progress-overview">
                    <div class="progress-metrics">
                        <div class="metric">
                            <span class="metric-label">Progress:</span>
                            <span class="metric-value" id="import-progress">0%</span>
                        </div>
                        <div class="metric">
                            <span class="metric-label">Records Processed:</span>
                            <span class="metric-value" id="records-processed">0</span>
                        </div>
                        <div class="metric">
                            <span class="metric-label">Success Rate:</span>
                            <span class="metric-value" id="success-rate">0%</span>
                        </div>
                        <div class="metric">
                            <span class="metric-label">Time Elapsed:</span>
                            <span class="metric-value" id="time-elapsed">00:00:00</span>
                        </div>
                    </div>
                    <div class="progress-bar-container">
                        <div class="progress-bar">
                            <div class="progress-fill" id="progress-fill" style="width: 0%"></div>
                        </div>
                    </div>
                </div>

                <div class="progress-details">
                    <div class="detail-section">
                        <h4>Import Summary</h4>
                        <div class="summary-stats">
                            <div class="summary-stat">
                                <span class="stat-label">Total Records:</span>
                                <span class="stat-value" id="total-records">0</span>
                            </div>
                            <div class="summary-stat">
                                <span class="stat-label">Successful:</span>
                                <span class="stat-value" id="successful-records">0</span>
                            </div>
                            <div class="summary-stat">
                                <span class="stat-label">Failed:</span>
                                <span class="stat-value" id="failed-records">0</span>
                            </div>
                            <div class="summary-stat">
                                <span class="stat-label">Skipped:</span>
                                <span class="stat-value" id="skipped-records">0</span>
                            </div>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4>Import Actions</h4>
                        <div class="action-buttons">
                            <button class="btn-start-import" onclick="startImport()" id="start-import-btn">
                                <i class="fas fa-play"></i> Start Import
                            </button>
                            <button class="btn-pause-import" onclick="pauseImport()" id="pause-import-btn" disabled>
                                <i class="fas fa-pause"></i> Pause
                            </button>
                            <button class="btn-stop-import" onclick="stopImport()" id="stop-import-btn" disabled>
                                <i class="fas fa-stop"></i> Stop
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-upload"></i> Import Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="import-form">
                    <div class="form-section">
                        <h4>Data Source</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="import-source-type">Source Type</label>
                                <select id="import-source-type">
                                    <option value="file">File Upload</option>
                                    <option value="url">URL Import</option>
                                    <option value="database">Database Connection</option>
                                    <option value="api">API Endpoint</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="import-target-table">Target Table</label>
                                <select id="import-target-table">
                                    <option value="">Select Target Table</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-section" id="file-upload-section">
                        <h4>File Upload</h4>
                        <div class="file-upload-area">
                            <input type="file" id="import-file-input" accept=".csv,.xlsx,.xls,.json,.xml">
                            <div class="file-info">
                                <span id="file-name">No file selected</span>
                                <span id="file-size"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-section" id="url-import-section" style="display: none;">
                        <h4>URL Import</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="import-url">Import URL</label>
                                <input type="url" id="import-url" placeholder="https://example.com/data.json">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="auth-method">Authentication</label>
                                <select id="auth-method">
                                    <option value="none">No Authentication</option>
                                    <option value="basic">Basic Auth</option>
                                    <option value="bearer">Bearer Token</option>
                                    <option value="api-key">API Key</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="initiateImport()">Start Import</button>
            </div>
        </div>
    </div>
</div>

<style>
/* Data Importer Styles */
.import-overview-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.import-overview-section h2 {
    font-size: 24px;
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 25px;
    text-align: center;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.import-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.import-history-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.data-preview-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.preview-interface {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 30px;
}

.upload-area {
    border: 2px dashed #e2e8f0;
    border-radius: 12px;
    padding: 40px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
}

.upload-area:hover {
    border-color: var(--primary-color);
    background: rgba(74, 110, 224, 0.02);
}

.upload-content i {
    font-size: 48px;
    color: var(--primary-color);
    margin-bottom: 15px;
}

.upload-link {
    color: var(--primary-color);
    text-decoration: underline;
    cursor: pointer;
}

.supported-formats {
    text-align: center;
    margin-top: 15px;
    color: #666;
}

.data-table-container {
    max-height: 400px;
    overflow-y: auto;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
}

.data-preview-table {
    width: 100%;
    border-collapse: collapse;
}

.data-preview-table th,
.data-preview-table td {
    padding: 10px 12px;
    text-align: left;
    border-bottom: 1px solid #e2e8f0;
}

.data-preview-table th {
    background: var(--primary-color);
    color: white;
    font-weight: 600;
    position: sticky;
    top: 0;
}

.field-mapping-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.mapping-interface {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 20px;
}

.source-fields-panel,
.target-fields-panel {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 20px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.fields-list {
    max-height: 300px;
    overflow-y: auto;
}

.field-item {
    padding: 10px;
    margin-bottom: 8px;
    background: #f8f9fa;
    border-radius: 6px;
    border: 1px solid #e2e8f0;
    cursor: move;
}

.field-item:hover {
    background: rgba(74, 110, 224, 0.05);
    border-color: var(--primary-color);
}

.mapping-canvas {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 20px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
}

.mapping-rules {
    flex: 1;
    min-height: 200px;
    border: 2px dashed #e2e8f0;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
}

.mapping-actions {
    display: flex;
    gap: 10px;
    justify-content: center;
    margin-top: 20px;
}

.import-config-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.config-panels {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
}

.config-panel {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 25px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.config-options,
.validation-options {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.config-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.import-progress-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.progress-dashboard {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 25px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.progress-overview {
    margin-bottom: 30px;
}

.progress-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.metric {
    text-align: center;
}

.metric-label {
    display: block;
    font-size: 12px;
    color: #666;
    margin-bottom: 5px;
}

.metric-value {
    display: block;
    font-size: 18px;
    font-weight: 700;
    color: var(--primary-color);
}

.progress-bar-container {
    width: 100%;
}

.progress-bar {
    width: 100%;
    height: 20px;
    background: #e2e8f0;
    border-radius: 10px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    width: 0%;
    transition: width 0.3s ease;
}

.progress-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
}

.detail-section h4 {
    margin-bottom: 15px;
    color: var(--dark-color);
}

.summary-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
}

.summary-stat {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px solid #e2e8f0;
}

.action-buttons {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.btn-start-import,
.btn-pause-import,
.btn-stop-import {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.btn-start-import {
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    color: white;
}

.btn-pause-import {
    background: linear-gradient(135deg, #f39c12, #e67e22);
    color: white;
}

.btn-stop-import {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
}

/* Modal Styles */
.modal-content {
    border-radius: 12px;
    border: none;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
}

.modal-header {
    background: var(--primary-gradient);
    color: white;
    border-radius: 12px 12px 0 0;
    border-bottom: none;
    padding: 20px 25px;
}

.modal-body {
    padding: 25px;
}

.form-section {
    margin-bottom: 25px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
}

.file-upload-area {
    text-align: center;
}

.file-info {
    margin-top: 15px;
    font-size: 14px;
    color: #666;
}

/* Responsive Design */
@media (max-width: 1200px) {
    .preview-interface {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .mapping-interface {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .config-panels {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .progress-details {
        grid-template-columns: 1fr;
        gap: 20px;
    }
}

@media (max-width: 768px) {
    .import-overview-section,
    .import-history-section,
    .data-preview-section,
    .field-mapping-section,
    .import-config-section,
    .import-progress-section {
        padding: 20px;
    }

    .import-stats-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .progress-metrics {
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }

    .summary-stats {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
        align-items: stretch;
    }

    .btn-start-import,
    .btn-pause-import,
    .btn-stop-import {
        width: 100%;
        justify-content: center;
    }
}
</style>

{% endblock %}