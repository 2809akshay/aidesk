{% extends '@CustomDatabase/sidebar/sidebar.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/database/style.css') }}" crossorigin="anonymous" />
{% endblock %}

{% block headscripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('bundles/customdatabase/static/backup-restore/script.js') }}"></script>
{% endblock %}

{% block content %}
<div class="main-content">
    <div class="backup-restore-content">
        <div class="database-header">
            <div class="header-actions">
                <a href="{{ path('home') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
                <button class="btn-create-backup" onclick="createNewBackup()">
                    <i class="fas fa-plus"></i> Create Backup
                </button>
                <button class="btn-schedule-backup" onclick="scheduleBackup()">
                    <i class="fas fa-clock"></i> Schedule Backup
                </button>
            </div>
            <h1><i class="fas fa-database"></i> Advanced Backup & Restore</h1>
            <p>Comprehensive backup management with automated scheduling, disaster recovery, and data protection</p>
        </div>

        <!-- Backup Overview Section -->
        <div class="backup-overview-section">
            <h2><i class="fas fa-chart-network"></i> Backup Overview</h2>
            <div class="backup-stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Total Backups</h4>
                        <div class="stat-value" id="total-backups">247</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i> +12.5%
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-hdd"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Storage Used</h4>
                        <div class="stat-value" id="storage-used">2.4TB</div>
                        <div class="stat-trend neutral">
                            <i class="fas fa-minus"></i> 0.2%
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Last Successful</h4>
                        <div class="stat-value" id="last-successful">2h ago</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Failed Backups</h4>
                        <div class="stat-value" id="failed-backups">3</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Section -->
        <div class="quick-actions-section">
            <div class="quick-actions-grid">
                <div class="quick-action-card">
                    <div class="action-icon">
                        <i class="fas fa-play"></i>
                    </div>
                    <h4>Quick Backup</h4>
                    <p>Create an immediate backup of selected databases</p>
                    <button class="btn-quick-action" onclick="quickBackup()">
                        <i class="fas fa-play"></i> Start Backup
                    </button>
                </div>

                <div class="quick-action-card">
                    <div class="action-icon">
                        <i class="fas fa-undo"></i>
                    </div>
                    <h4>Quick Restore</h4>
                    <p>Restore from the latest backup</p>
                    <button class="btn-quick-action" onclick="quickRestore()">
                        <i class="fas fa-undo"></i> Restore Now
                    </button>
                </div>

                <div class="quick-action-card">
                    <div class="action-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <h4>Cloud Backup</h4>
                    <p>Upload backup to cloud storage</p>
                    <button class="btn-quick-action" onclick="cloudBackup()">
                        <i class="fas fa-cloud-upload-alt"></i> Upload
                    </button>
                </div>

                <div class="quick-action-card">
                    <div class="action-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h4>Verify Backup</h4>
                    <p>Verify backup integrity and completeness</p>
                    <button class="btn-quick-action" onclick="verifyBackup()">
                        <i class="fas fa-search"></i> Verify
                    </button>
                </div>
            </div>
        </div>

        <!-- Backup History Section -->
        <div class="backup-history-section">
            <div class="section-header">
                <h2><i class="fas fa-history"></i> Backup History</h2>
                <div class="section-controls">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="backup-search" placeholder="Search backups...">
                    </div>
                    <select id="backup-status-filter">
                        <option value="all">All Status</option>
                        <option value="completed">Completed</option>
                        <option value="running">Running</option>
                        <option value="failed">Failed</option>
                        <option value="scheduled">Scheduled</option>
                    </select>
                </div>
            </div>

            <div class="backup-history-table">
                <table class="backup-table" id="backup-table">
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="select-all-backups"></th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Database</th>
                            <th>Size</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Duration</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="backup-table-body">
                        <!-- Backup entries will be loaded dynamically -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Scheduled Backups Section -->
        <div class="scheduled-backups-section">
            <h2><i class="fas fa-clock"></i> Scheduled Backups</h2>
            <div class="scheduled-backups-grid">
                <div class="scheduled-backup-card">
                    <div class="schedule-header">
                        <h4>Daily Full Backup</h4>
                        <div class="schedule-status active">
                            <span>Active</span>
                        </div>
                    </div>
                    <div class="schedule-details">
                        <div class="schedule-info">
                            <span><i class="fas fa-calendar"></i> Every day at 2:00 AM</span>
                            <span><i class="fas fa-database"></i> All databases</span>
                            <span><i class="fas fa-hdd"></i> Full backup</span>
                        </div>
                        <div class="schedule-actions">
                            <button class="btn-schedule-action" onclick="editSchedule('daily')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="pauseSchedule('daily')">
                                <i class="fas fa-pause"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="deleteSchedule('daily')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="scheduled-backup-card">
                    <div class="schedule-header">
                        <h4>Weekly Incremental</h4>
                        <div class="schedule-status active">
                            <span>Active</span>
                        </div>
                    </div>
                    <div class="schedule-details">
                        <div class="schedule-info">
                            <span><i class="fas fa-calendar"></i> Every Sunday at 3:00 AM</span>
                            <span><i class="fas fa-database"></i> Production DB</span>
                            <span><i class="fas fa-hdd"></i> Incremental</span>
                        </div>
                        <div class="schedule-actions">
                            <button class="btn-schedule-action" onclick="editSchedule('weekly')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="pauseSchedule('weekly')">
                                <i class="fas fa-pause"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="deleteSchedule('weekly')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="scheduled-backup-card">
                    <div class="schedule-header">
                        <h4>Monthly Archive</h4>
                        <div class="schedule-status paused">
                            <span>Paused</span>
                        </div>
                    </div>
                    <div class="schedule-details">
                        <div class="schedule-info">
                            <span><i class="fas fa-calendar"></i> 1st of every month</span>
                            <span><i class="fas fa-database"></i> Archive DB</span>
                            <span><i class="fas fa-hdd"></i> Archive</span>
                        </div>
                        <div class="schedule-actions">
                            <button class="btn-schedule-action" onclick="editSchedule('monthly')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="resumeSchedule('monthly')">
                                <i class="fas fa-play"></i>
                            </button>
                            <button class="btn-schedule-action" onclick="deleteSchedule('monthly')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Storage & Retention Section -->
        <div class="storage-retention-section">
            <h2><i class="fas fa-server"></i> Storage & Retention</h2>
            <div class="storage-panels">
                <div class="storage-panel">
                    <h3>Storage Overview</h3>
                    <div class="storage-info">
                        <div class="storage-metric">
                            <span class="storage-label">Total Capacity:</span>
                            <span class="storage-value">10TB</span>
                        </div>
                        <div class="storage-metric">
                            <span class="storage-label">Used Space:</span>
                            <span class="storage-value">2.4TB (24%)</span>
                        </div>
                        <div class="storage-metric">
                            <span class="storage-label">Available:</span>
                            <span class="storage-value">7.6TB</span>
                        </div>
                    </div>
                    <div class="storage-bar">
                        <div class="storage-fill" style="width: 24%"></div>
                    </div>
                </div>

                <div class="retention-panel">
                    <h3>Retention Policies</h3>
                    <div class="retention-rules">
                        <div class="retention-rule">
                            <div class="rule-info">
                                <h5>Daily Backups</h5>
                                <span>Keep for 30 days</span>
                            </div>
                            <div class="rule-status active">
                                <span>Active</span>
                            </div>
                        </div>
                        <div class="retention-rule">
                            <div class="rule-info">
                                <h5>Weekly Backups</h5>
                                <span>Keep for 12 weeks</span>
                            </div>
                            <div class="rule-status active">
                                <span>Active</span>
                            </div>
                        </div>
                        <div class="retention-rule">
                            <div class="rule-info">
                                <h5>Monthly Backups</h5>
                                <span>Keep for 24 months</span>
                            </div>
                            <div class="rule-status active">
                                <span>Active</span>
                            </div>
                        </div>
                    </div>
                    <div class="retention-actions">
                        <button class="btn-manage-retention" onclick="manageRetention()">
                            <i class="fas fa-cog"></i> Manage Policies
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Disaster Recovery Section -->
        <div class="disaster-recovery-section">
            <h2><i class="fas fa-exclamation-triangle"></i> Disaster Recovery</h2>
            <div class="recovery-options">
                <div class="recovery-card">
                    <div class="recovery-icon">
                        <i class="fas fa-undo-alt"></i>
                    </div>
                    <h4>Point-in-Time Recovery</h4>
                    <p>Restore database to any specific point in time</p>
                    <div class="recovery-details">
                        <span>Last possible: 2024-01-15 14:30:00</span>
                        <span>Recovery window: 30 days</span>
                    </div>
                    <button class="btn-recovery-action" onclick="pointInTimeRecovery()">
                        <i class="fas fa-history"></i> Start Recovery
                    </button>
                </div>

                <div class="recovery-card">
                    <div class="recovery-icon">
                        <i class="fas fa-copy"></i>
                    </div>
                    <h4>Database Cloning</h4>
                    <p>Create a copy of database for testing or development</p>
                    <div class="recovery-details">
                        <span>Available backups: 15</span>
                        <span>Clone time: ~5 minutes</span>
                    </div>
                    <button class="btn-recovery-action" onclick="cloneDatabase()">
                        <i class="fas fa-copy"></i> Clone Database
                    </button>
                </div>

                <div class="recovery-card">
                    <div class="recovery-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <h4>Cross-Region Restore</h4>
                    <p>Restore database to a different geographic region</p>
                    <div class="recovery-details">
                        <span>Available regions: 3</span>
                        <span>Transfer time: ~2 hours</span>
                    </div>
                    <button class="btn-recovery-action" onclick="crossRegionRestore()">
                        <i class="fas fa-globe"></i> Cross-Region
                    </button>
                </div>

                <div class="recovery-card">
                    <div class="recovery-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4>Emergency Restore</h4>
                    <p>Immediate restore from latest backup in emergency</p>
                    <div class="recovery-details">
                        <span>Last backup: 2 hours ago</span>
                        <span>Restore time: ~15 minutes</span>
                    </div>
                    <button class="btn-recovery-action emergency" onclick="emergencyRestore()">
                        <i class="fas fa-exclamation-triangle"></i> Emergency Restore
                    </button>
                </div>
            </div>
        </div>

        <!-- Backup Monitoring Section -->
        <div class="backup-monitoring-section">
            <h2><i class="fas fa-chart-line"></i> Backup Monitoring</h2>
            <div class="monitoring-dashboard">
                <div class="monitoring-charts">
                    <div class="monitoring-chart">
                        <h4>Backup Success Rate</h4>
                        <canvas id="success-rate-chart" width="300" height="200"></canvas>
                    </div>
                    <div class="monitoring-chart">
                        <h4>Backup Duration Trend</h4>
                        <canvas id="duration-chart" width="300" height="200"></canvas>
                    </div>
                    <div class="monitoring-chart">
                        <h4>Storage Growth</h4>
                        <canvas id="storage-chart" width="300" height="200"></canvas>
                    </div>
                    <div class="monitoring-chart">
                        <h4>Backup Frequency</h4>
                        <div class="frequency-stats">
                            <div class="freq-item">
                                <span class="freq-label">Daily:</span>
                                <span class="freq-value">24 backups</span>
                            </div>
                            <div class="freq-item">
                                <span class="freq-label">Weekly:</span>
                                <span class="freq-value">4 backups</span>
                            </div>
                            <div class="freq-item">
                                <span class="freq-label">Monthly:</span>
                                <span class="freq-value">1 backup</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="monitoring-alerts">
                    <h4>System Alerts</h4>
                    <div class="alerts-list">
                        <div class="alert-item warning">
                            <div class="alert-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="alert-content">
                                <h5>Storage Space Low</h5>
                                <p>Backup storage is 76% full. Consider cleanup or expansion.</p>
                            </div>
                        </div>
                        <div class="alert-item info">
                            <div class="alert-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="alert-content">
                                <h5>Backup Schedule Updated</h5>
                                <p>Daily backup schedule has been optimized for better performance.</p>
                            </div>
                        </div>
                        <div class="alert-item success">
                            <div class="alert-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="alert-content">
                                <h5>All Systems Operational</h5>
                                <p>Backup systems are running normally with 99.9% uptime.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Backup Modal -->
<div class="modal fade" id="createBackupModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Create New Backup</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="create-backup-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="backup-name">Backup Name</label>
                            <input type="text" id="backup-name" required>
                        </div>
                        <div class="form-group">
                            <label for="backup-type">Backup Type</label>
                            <select id="backup-type" required>
                                <option value="">Select Type</option>
                                <option value="full">Full Backup</option>
                                <option value="incremental">Incremental Backup</option>
                                <option value="differential">Differential Backup</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="target-database">Target Database</label>
                            <select id="target-database" required>
                                <option value="">Select Database</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="backup-location">Storage Location</label>
                            <select id="backup-location" required>
                                <option value="">Select Location</option>
                                <option value="local">Local Storage</option>
                                <option value="cloud">Cloud Storage</option>
                                <option value="external">External Drive</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="compression">Compression Level</label>
                            <select id="compression">
                                <option value="none">No Compression</option>
                                <option value="fast">Fast Compression</option>
                                <option value="optimal">Optimal Compression</option>
                                <option value="maximum">Maximum Compression</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="encryption">Encryption</label>
                            <select id="encryption">
                                <option value="none">No Encryption</option>
                                <option value="aes256">AES-256</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group full-width">
                            <label for="backup-description">Description</label>
                            <textarea id="backup-description" rows="3" placeholder="Optional description for this backup..."></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="startBackup()">Start Backup</button>
            </div>
        </div>
    </div>
</div>

<style>
/* Backup & Restore Styles */
.backup-overview-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.backup-overview-section h2 {
    font-size: 24px;
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 25px;
    text-align: center;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.backup-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.quick-actions-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.quick-action-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 25px;
    text-align: center;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.quick-action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.action-icon {
    font-size: 36px;
    color: var(--primary-color);
    margin-bottom: 15px;
    background: rgba(74, 110, 224, 0.1);
    border-radius: 12px;
    padding: 15px;
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px auto;
}

.quick-action-card h4 {
    font-size: 18px;
    font-weight: 600;
    color: var(--dark-color);
    margin-bottom: 10px;
}

.quick-action-card p {
    color: #666;
    margin-bottom: 20px;
    line-height: 1.5;
}

.btn-quick-action {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    margin: 0 auto;
}

.btn-quick-action {
    background: var(--primary-gradient);
    color: white;
}

.backup-history-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.backup-history-table {
    max-height: 500px;
    overflow-y: auto;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
}

.backup-table {
    width: 100%;
    border-collapse: collapse;
}

.backup-table th,
.backup-table td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #e2e8f0;
}

.backup-table th {
    background: var(--primary-color);
    color: white;
    font-weight: 600;
    position: sticky;
    top: 0;
}

.backup-table tbody tr:hover {
    background: rgba(74, 110, 224, 0.05);
}

.status-completed {
    color: #27ae60;
    font-weight: 600;
}

.status-running {
    color: #3498db;
    font-weight: 600;
}

.status-failed {
    color: #e74c3c;
    font-weight: 600;
}

.status-scheduled {
    color: #f39c12;
    font-weight: 600;
}

.scheduled-backups-section {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 20px;
}

.scheduled-backups-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 20px;
}

.scheduled-backup-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    padding: 25px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.scheduled-backup-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.schedule-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.schedule-header h4 {
    margin: 0;
    color: var(--dark-color);
    font-size: 18px;
}

.schedule-status {
    font-size: 12px;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 12px;
}

.schedule-status.active {
    background: #27ae60;
