                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="data-type-info">
                                <h4>Phone Numbers</h4>
                                <div class="data-count">4,670 detected</div>
                                <div class="data-status masked">92% masked</div>
                            </div>
                        </div>
