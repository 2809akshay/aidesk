                    <h4>HIPAA Compliance</h4>
                    <div class="compliance-score">
                        <div class="score-circle">
                            <span class="score-value">92%</span>
                        </div>
                    </div>
                    <div class="compliance-details">
                        <div class="compliance-item">
                            <span>PHI Protection</span>
                            <span class="status compliant">✓</span>
                        </div>
                        <div class="compliance-item">
                            <span>Access Controls</span>
                            <span class="status compliant">✓</span>
                        </div>
                        <div class="compliance-item">
                            <span>Audit Trails</span>
                            <span class="status warning">⚠</span>
                        </div>
                    </div>
                </div>

                <div class="compliance-card">
                    <h4>PCI DSS Compliance</h4>
                    <div class="compliance-score">
                        <div class="score-circle">
                            <span class="score-value">89%</span>
                        </div>
                    </div>
                    <div class="compliance-details">
                        <div class="compliance-item">
                            <span>Card Data Protection</span>
                            <span class="status compliant">✓</span>
                        </div>
                        <div class="compliance-item">
                            <span>Encryption</span>
                            <span class="status warning">⚠</span>
                        </div>
                        <div class="compliance-item">
                            <span>Access Monitoring</span>
                            <span class="status warning">⚠</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Masking Rule Modal -->
<div class="modal fade" id="createRuleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Create Masking Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="create-rule-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="rule-name">Rule Name</label>
                            <input type="text" id="rule-name" required>
                        </div>
                        <div class="form-group">
                            <label for="rule-type">Masking Type</label>
                            <select id="rule-type" required>
                                <option value="">Select Type</option>
                                <option value="redact">Redact</option>
                                <option value="hash">Hash</option>
                                <option value="encrypt">Encrypt</option>
                                <option value="replace">Replace</option>
                                <option value="shuffle">Shuffle</option>
                                <option value="mask">Mask</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="target-database">Target Database</label>
                            <select id="target-database" required>
                                <option value="">Select Database</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="target-table">Target Table</label>
                            <select id="target-table" required>
                                <option value="">Select Table</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="target-column">Target Column</label>
                            <select id="target-column" required>
                                <option value="">Select Column</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="masking-pattern">Masking Pattern</label>
                            <input type="text" id="masking-pattern" placeholder="e.g., XXXX-XXXX-XXXX-####">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="rule-description">Description</label>
                            <textarea id="rule-description" rows="3" placeholder="Describe what this rule does..."></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="rule-conditions">Conditions (JSON)</label>
                            <textarea id="rule-conditions" rows="3" placeholder='{"environment": "production", "data_type": "sensitive"}'></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="createMaskingRule()">Create Rule</button>
            </div>
        </div>
    </div>
</div>

