                    <div class="stat-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Masked Databases</h4>
                        <div class="stat-value" id="masked-databases">8</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-table"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Masked Tables</h4>
                        <div class="stat-value" id="masked-tables">24</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-columns"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Masked Fields</h4>
                        <div class="stat-value" id="masked-fields">156</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Compliance Score</h4>
                        <div class="stat-value" id="compliance-score">94%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Masking Rules Section -->
        <div class="masking-rules-section">
            <div class="section-header">
                <h2><i class="fas fa-cogs"></i> Masking Rules</h2>
                <div class="section-controls">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="rule-search" placeholder="Search rules...">
                    </div>
                    <select id="rule-status-filter">
                        <option value="all">All Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>
            </div>

            <div class="rules-grid" id="rules-grid">
                <!-- Masking rules will be loaded dynamically -->
            </div>
        </div>

        <!-- Data Discovery Section -->
        <div class="data-discovery-section">
            <h2><i class="fas fa-search"></i> Data Discovery & Classification</h2>
            <div class="discovery-panels">
                <div class="discovery-panel">
                    <h3>Sensitive Data Detection</h3>
                    <div class="data-types-grid">
                        <div class="data-type-card">
                            <div class="data-type-icon">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div class="data-type-info">
                                <h4>Credit Card Numbers</h4>
                                <div class="data-count">2,450 detected</div>
                                <div class="data-status masked">100% masked</div>
                            </div>
                        </div>
                        <div class="data-type-card">
                            <div class="data-type-icon">
                                <i class="fas fa-id-card"></i>
