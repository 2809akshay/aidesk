{% extends '@CustomDatabase/sidebar/sidebar.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/database/style.css') }}" crossorigin="anonymous" />
{% endblock %}

{% block headscripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('bundles/customdatabase/static/security-center/script.js') }}"></script>
{% endblock %}

{% block content %}
<div class="main-content">
    <div class="security-center-content">
        <div class="database-header">
            <div class="header-actions">
                <a href="{{ path('home') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
                <button class="btn-security-scan" onclick="runSecurityScan()">
                    <i class="fas fa-shield-alt"></i> Run Security Scan
                </button>
            </div>
            <h1><i class="fas fa-shield-alt"></i> Advanced Security Center</h1>
            <p>Comprehensive security management with threat monitoring, access control, encryption, and compliance monitoring</p>
        </div>

        <!-- Security Overview Section -->
        <div class="security-overview-section">
            <h2><i class="fas fa-chart-network"></i> Security Overview</h2>
            <div class="security-stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Security Score</h4>
                        <div class="stat-value" id="security-score">85%</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i> +5%
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Active Threats</h4>
                        <div class="stat-value" id="active-threats">2</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Encrypted Fields</h4>
                        <div class="stat-value" id="encrypted-fields">12</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Access Violations</h4>
                        <div class="stat-value" id="access-violations">0</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Threat Monitoring Section -->
        <div class="threat-monitoring-section">
            <div class="section-header">
                <h2><i class="fas fa-radar"></i> Threat Monitoring</h2>
                <div class="section-controls">
                    <select id="threat-timeframe">
                        <option value="1h">Last Hour</option>
                        <option value="24h" selected>Last 24 Hours</option>
                        <option value="7d">Last 7 Days</option>
                        <option value="30d">Last 30 Days</option>
                    </select>
                </div>
            </div>

            <div class="threat-dashboard">
                <div class="threat-overview">
                    <div class="threat-metrics">
                        <div class="metric">
                            <span class="metric-label">Total Threats Detected:</span>
                            <span class="metric-value" id="total-threats">24</span>
                        </div>
                        <div class="metric">
                            <span class="metric-label">Blocked Attempts:</span>
                            <span class="metric-value" id="blocked-attempts">18</span>
                        </div>
                        <div class="metric">
                            <span class="metric-label">False Positives:</span>
                            <span class="metric-value" id="false-positives">2</span>
                        </div>
                    </div>

                    <div class="threat-chart">
                        <h4>Threat Activity</h4>
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-line"></i>
                            <p>Threat activity chart</p>
                        </div>
                    </div>
                </div>

                <div class="recent-threats">
                    <h4>Recent Threats</h4>
                    <div class="threats-list" id="threats-list">
                        <!-- Recent threats will be loaded dynamically -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Access Control Section -->
        <div class="access-control-section">
            <h2><i class="fas fa-key"></i> Access Control Management</h2>
            <div class="access-control-panels">
                <div class="access-panel">
                    <h3>User Roles & Permissions</h3>
                    <div class="roles-list" id="roles-list">
                        <!-- User roles will be loaded dynamically -->
                    </div>
                    <div class="role-actions">
                        <button class="btn-create-role" onclick="createNewRole()">
                            <i class="fas fa-plus"></i> Create Role
                        </button>
                        <button class="btn-manage-permissions" onclick="managePermissions()">
                            <i class="fas fa-cog"></i> Manage Permissions
                        </button>
                    </div>
                </div>

                <div class="access-panel">
                    <h3>Access Logs</h3>
                    <div class="access-logs" id="access-logs">
                        <!-- Access logs will be loaded dynamically -->
                    </div>
                    <div class="log-actions">
                        <button class="btn-export-logs" onclick="exportAccessLogs()">
                            <i class="fas fa-download"></i> Export Logs
                        </button>
                        <button class="btn-clear-logs" onclick="clearAccessLogs()">
                            <i class="fas fa-trash"></i> Clear Old Logs
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Encryption Management Section -->
        <div class="encryption-section">
            <h2><i class="fas fa-lock"></i> Encryption Management</h2>
            <div class="encryption-dashboard">
                <div class="encryption-overview">
                    <div class="encryption-stats">
                        <div class="stat-item">
                            <span class="stat-label">Encrypted Databases:</span>
                            <span class="stat-value" id="encrypted-databases">3</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Encryption Algorithm:</span>
                            <span class="stat-value" id="encryption-algorithm">AES-256</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Last Key Rotation:</span>
                            <span class="stat-value" id="last-key-rotation">2 days ago</span>
                        </div>
                    </div>

                    <div class="encryption-actions">
                        <button class="btn-rotate-keys" onclick="rotateEncryptionKeys()">
                            <i class="fas fa-key"></i> Rotate Keys
                        </button>
                        <button class="btn-manage-encryption" onclick="manageEncryption()">
                            <i class="fas fa-cog"></i> Manage Encryption
                        </button>
                        <button class="btn-encryption-report" onclick="generateEncryptionReport()">
                            <i class="fas fa-file-alt"></i> Generate Report
                        </button>
                    </div>
                </div>

                <div class="encryption-fields">
                    <h4>Encrypted Fields</h4>
                    <div class="fields-table">
                        <table id="encrypted-fields-table">
                            <thead>
                                <tr>
                                    <th>Field Name</th>
                                    <th>Table</th>
                                    <th>Encryption Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="encrypted-fields-body">
                                <!-- Encrypted fields will be loaded dynamically -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Audit Section -->
        <div class="security-audit-section">
            <h2><i class="fas fa-search"></i> Security Audit & Compliance</h2>
            <div class="audit-panels">
                <div class="audit-panel">
                    <h3>Compliance Status</h3>
                    <div class="compliance-checklist">
                        <div class="compliance-item">
                            <div class="compliance-info">
                                <span class="compliance-name">GDPR Compliance</span>
                                <span class="compliance-status compliant">Compliant</span>
                            </div>
                            <div class="compliance-details">
                                <span>Last Audit: 2024-01-15</span>
                                <span>Next Review: 2025-01-15</span>
                            </div>
                        </div>
                        <div class="compliance-item">
                            <div class="compliance-info">
                                <span class="compliance-name">HIPAA Compliance</span>
                                <span class="compliance-status compliant">Compliant</span>
                            </div>
                            <div class="compliance-details">
                                <span>Last Audit: 2024-02-01</span>
                                <span>Next Review: 2025-02-01</span>
                            </div>
                        </div>
                        <div class="compliance-item">
                            <div class="compliance-info">
                                <span class="compliance-name">PCI DSS Compliance</span>
                                <span class="compliance-status warning">Review Needed</span>
                            </div>
                            <div class="compliance-details">
                                <span>Last Audit: 2023-12-01</span>
                                <span>Next Review: 2024-12-01</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="audit-panel">
                    <h3>Security Audit Logs</h3>
                    <div class="audit-logs" id="audit-logs">
                        <!-- Audit logs will be loaded dynamically -->
                    </div>
                    <div class="audit-actions">
                        <button class="btn-run-audit" onclick="runSecurityAudit()">
                            <i class="fas fa-play"></i> Run Audit
                        </button>
                        <button class="btn-export-audit" onclick="exportAuditReport()">
                            <i class="fas fa-download"></i> Export Report
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Alerts Section -->
        <div class="security-alerts-section">
            <h2><i class="fas fa-bell"></i> Security Alerts & Notifications</h2>
            <div class="alerts-dashboard">
                <div class="alerts-overview">
                    <div class="alert-stats">
                        <div class="alert-stat">
                            <span class="stat-label">Critical Alerts:</span>
                            <span class="stat-value critical">2</span>
                        </div>
                        <div class="alert-stat">
                            <span class="stat-label">Warning Alerts:</span>
                            <span class="stat-value warning">5</span>
                        </div>
                        <div class="alert-stat">
                            <span class="stat-label">Info Alerts:</span>
                            <span class="stat-value info">12</span>
                        </div>
                    </div>

                    <div class="alert-settings">
                        <button class="btn-configure-alerts" onclick="configureAlerts()">
                            <i class="fas fa-cog"></i> Configure Alerts
                        </button>
                        <button class="btn-test-alerts" onclick="testAlertSystem()">
                            <i class="fas fa-flask"></i> Test Alerts
                        </button>
                    </div>
                </div>

                <div class="recent-alerts">
                    <h4>Recent Security Alerts</h4>
                    <div class="alerts-list" id="alerts-list">
                        <!-- Recent alerts will be loaded dynamically -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Security Scan Modal -->
<div class="modal fade" id="securityScanModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-shield-alt"></i> Security Scan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="scan-progress">
                    <div class="scan-status">
                        <h4>Scanning System...</h4>
                        <div class="progress-bar">
                            <div class="progress-fill" id="scan-progress-fill" style="width: 0%"></div>
                        </div>
                        <div class="scan-details" id="scan-details">Initializing security scan...</div>
                    </div>

                    <div class="scan-results" id="scan-results" style="display: none;">
                        <h4>Scan Results</h4>
                        <div class="scan-summary">
                            <div class="scan-item">
                                <span class="scan-label">Vulnerabilities Found:</span>
                                <span class="scan-value" id="vulnerabilities-count">0</span>
                            </div>
                            <div class="scan-item">
                                <span class="scan-label">Security Issues:</span>
                                <span class="scan-value" id="security-issues-count">0</span>
                            </div>
                            <div class="scan-item">
                                <span class="scan-label">Recommendations:</span>
                                <span class="scan-value" id="recommendations-count">0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn-primary" onclick="viewScanReport()">View Report</button>
            </div>
        </div>
    </div>
</div>

