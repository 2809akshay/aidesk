{% block content %}
<div class="main-content">
    <div class="database-connector-content">
        <div class="database-header">
            <div class="header-actions">
                <a href="{{ path('home') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
                <button class="btn-add-api" onclick="openAddApiModal()">
                    <i class="fas fa-plus"></i> Add API Connection
                </button>
            </div>
            <h1><i class="fas fa-plug"></i> Advanced API Connections</h1>
            <p>Connect to external APIs, manage credentials, test endpoints, and monitor API performance</p>
        </div>

        <!-- API Overview Section -->
        <div class="api-overview-section">
            <h2><i class="fas fa-chart-network"></i> API Connection Overview</h2>
            <div class="api-stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-link"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Active Connections</h4>
                        <div class="stat-value" id="active-connections">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Successful Calls</h4>
                        <div class="stat-value" id="successful-calls">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Failed Calls</h4>
                        <div class="stat-value" id="failed-calls">0</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-info">
                        <h4>Avg Response Time</h4>
                        <div class="stat-value" id="avg-response-time">0ms</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Connections Grid -->
        <div class="api-connections-section">
            <div class="section-header">
                <h2><i class="fas fa-server"></i> API Connections</h2>
                <div class="section-controls">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="api-search" placeholder="Search APIs...">
                    </div>
                    <select id="status-filter">
                        <option value="all">All Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="error">Error</option>
                    </select>
                </div>
            </div>

            <div class="api-connections-grid" id="api-connections-grid">
                <!-- API connections will be loaded dynamically -->
            </div>
        </div>

        <!-- API Testing Section -->
        <div class="api-testing-section">
            <h2><i class="fas fa-flask"></i> API Testing & Debugging</h2>
            <div class="testing-interface">
                <div class="test-config-panel">
                    <h3>Test Configuration</h3>
                    <div class="test-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="test-api-select">Select API</label>
                                <select id="test-api-select">
                                    <option value="">Choose API to test</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="test-method">HTTP Method</label>
                                <select id="test-method">
                                    <option value="GET">GET</option>
                                    <option value="POST">POST</option>
                                    <option value="PUT">PUT</option>
                                    <option value="DELETE">DELETE</option>
                                    <option value="PATCH">PATCH</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="test-endpoint">Endpoint URL</label>
                                <input type="text" id="test-endpoint" placeholder="e.g., /api/users">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="test-headers">Headers (JSON)</label>
                                <textarea id="test-headers" placeholder='{"Content-Type": "application/json"}' rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="test-body">Request Body (JSON)</label>
                                <textarea id="test-body" placeholder='{"key": "value"}' rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button class="btn-test-api" onclick="testApiEndpoint()">
                                <i class="fas fa-play"></i> Test API
                            </button>
                            <button class="btn-clear-test" onclick="clearTestForm()">
                                <i class="fas fa-trash"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>

                <div class="test-results-panel">
                    <h3>Test Results</h3>
                    <div class="results-container">
                        <div class="response-status">
                            <span class="status-label">Status:</span>
                            <span class="status-value" id="response-status">Not tested</span>
                        </div>
                        <div class="response-time">
                            <span class="time-label">Response Time:</span>
                            <span class="time-value" id="response-time">-</span>
                        </div>
                        <div class="response-headers">
                            <h4>Response Headers</h4>
                            <pre id="response-headers">No response yet</pre>
                        </div>
                        <div class="response-body">
                            <h4>Response Body</h4>
                            <pre id="response-body">No response yet</pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Monitoring Section -->
        <div class="api-monitoring-section">
            <h2><i class="fas fa-chart-line"></i> API Performance Monitoring</h2>
            <div class="monitoring-dashboard">
                <div class="monitoring-cards">
                    <div class="monitor-card">
                        <h4>Response Time Trend</h4>
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-area"></i>
                            <p>Response time chart will be displayed here</p>
                        </div>
                    </div>
                    <div class="monitor-card">
                        <h4>Success Rate</h4>
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-pie"></i>
                            <p>Success rate chart will be displayed here</p>
                        </div>
                    </div>
                    <div class="monitor-card">
                        <h4>Error Distribution</h4>
                        <div class="chart-placeholder">
                            <i class="fas fa-chart-bar"></i>
                            <p>Error distribution chart will be displayed here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add API Modal -->
<div class="modal fade" id="addApiModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Add New API Connection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="add-api-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="api-name">API Name</label>
                            <input type="text" id="api-name" required>
                        </div>
                        <div class="form-group">
                            <label for="api-type">API Type</label>
                            <select id="api-type" required>
                                <option value="">Select Type</option>
                                <option value="rest">REST API</option>
                                <option value="graphql">GraphQL</option>
                                <option value="soap">SOAP</option>
                                <option value="webhook">Webhook</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="api-base-url">Base URL</label>
                            <input type="url" id="api-base-url" placeholder="https://api.example.com" required>
                        </div>
                        <div class="form-group">
                            <label for="api-version">API Version</label>
                            <input type="text" id="api-version" placeholder="v1, v2, etc.">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="auth-type">Authentication Type</label>
                            <select id="auth-type" required>
                                <option value="">Select Authentication</option>
                                <option value="none">No Authentication</option>
                                <option value="basic">Basic Auth</option>
                                <option value="bearer">Bearer Token</option>
                                <option value="api-key">API Key</option>
                                <option value="oauth2">OAuth 2.0</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="api-description">Description</label>
                            <input type="text" id="api-description" placeholder="Brief description of the API">
                        </div>
                    </div>

                    <!-- Authentication Details -->
                    <div class="auth-details" id="auth-details" style="display: none;">
                        <h4>Authentication Details</h4>
                        <div id="auth-fields">
                            <!-- Dynamic auth fields will be added here -->
                        </div>
                    </div>

                    <!-- Advanced Settings -->
                    <div class="advanced-settings">
                        <h4>Advanced Settings</h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="timeout">Timeout (seconds)</label>
                                <input type="number" id="timeout" value="30" min="1" max="300">
                            </div>
                            <div class="form-group">
                                <label for="retry-count">Retry Count</label>
                                <input type="number" id="retry-count" value="3" min="0" max="10">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="rate-limit">Rate Limit (requests/minute)</label>
                                <input type="number" id="rate-limit" value="60" min="1">
                            </div>
                            <div class="form-group">
                                <label for="cache-enabled">Enable Caching</label>
                                <input type="checkbox" id="cache-enabled" checked>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="saveApiConnection()">Save Connection</button>
            </div>
        </div>
    </div>
</div>

