<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rule Engine Interface</title>   
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-pprn3073KE6tl6lEQgkaIsuaI6ZnI/4eEbsrNRv9+nnl7UMzVf91p+ekQ3CeX9gF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhG81rKrKrBr/J6f3Lv8eDlhEpX/1z6K3PONi9W8m4Llb5EM26VJoK27HM" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('bundles/customdatabase/static/rules-engine/style.css') }}" crossorigin="anonymous" />
</head> 
<body>

    <input type="hidden" id="columns" name="columns" value='{{ columns|json_encode|e("html_attr") }}'>
    <div class="main-container">
        <!-- Sidebar for tables -->
        <div class="sidebar">
            <div class="table-header">
                <h5>Database Tables</h5>
                <div class="table-actions">
                    <button class="btn btn-sm btn-outline-secondary" id="refreshTables">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>
            <div class="table-count" id="tableCount"></div>
            <div id="tablesList"></div>
        </div>
        
        <!-- Main content -->
        <div class="content">
            <div id="ruleEngineTitle">Rule Engine Interface</div>

            <div id="status-container" style="margin-left:75%;">
                <label id="status-label"></label>
                <span id="button-container"></span>
            </div>
        
            <div id="interfaceContainer">
                <div id="ruleContainer"></div>
                <button id="addRuleButton" class="btn btn-primary">Add Rule Group</button>
                <button id="saveAllButton" class="btn btn-success">Save All Groups</button>
            </div>

            <div id="popup" class="popup">
                <p id="popupMessage"></p>
                <button id="closePopup">Close</button>
            </div>

            <div id="populate" style="margin-left:84px;">
                <button id="defaultTable" class="btn btn-info">
                    Populate Data 
                </button>
            </div> 
        </div>
    </div>    
    <div id ="parent-container">
        <!-- Textarea for input -->
        <textarea id="query" placeholder="Query"></textarea>
    </div>
    </div>
    <div id="pimcoreObjects"></div>
    <script src="{{ asset('bundles/customdatabase/static/rules-engine/script.js') }}"></script>
</body>
</html>
